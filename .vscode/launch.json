{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Firebase Functions",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/verum-web/verum-web/functions/index.js",
      "cwd": "${workspaceFolder}/verum-web/verum-web/functions",
      "env": {
        "NODE_ENV": "development",
        "FUNCTION_REGION": "us-central1"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Firebase Functions (Firebase Emulator)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "serve"],
      "cwd": "${workspaceFolder}/verum-web/verum-web/functions",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "FUNCTION_REGION": "us-central1"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Firebase Functions",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/verum-web/verum-web/functions"
    }
  ]
}
